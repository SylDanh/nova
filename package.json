{
  "name": "nova",
  "version": "0.1.0",
  "description": "Maquette Nova pour Lodel, par le collectif Edinum.org",
  "main": "index.html",
  "scripts": {
    "css": "lessc less/site.less public/css/site.css --autoprefix",
    "vendor": "frontend-dependencies", 
    "watch-css": "onchange \"less/**/*.less\" -- npm run css"
  },
  "private": true,
  "devDependencies": {
    "frontend-dependencies": "^1.1.7",
    "less": "^3.9.0",
    "less-plugin-autoprefix": "^2.0.0",
    "onchange": "^6.0.0"
  },
  "frontendDependencies": {
    "target": "public/vendor/",
    "packages": {
      "bootstrap": {
        "version": "4.3.1",
        "src": "{dist/css/bootstrap.min.css,dist/js/bootstrap.bundle.min.js}",
        "namespaced": true
      },
      "jquery": {
        "version": "3.4.1",
        "src": "dist/jquery.slim.min.js",
        "namespaced": true
      },
      "@fortawesome/fontawesome-free": {
        "version": "5.9.0",
        "target": "public/vendor/fontawesome",
        "namespaced": false
      }
    }
  },
  "browserslist": [
    "defaults"
  ]
}
